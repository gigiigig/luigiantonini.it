<div class="container">
  <div class="row">
    <h2 class="span10 offset1"><%= @work.name %>
    </h2>
  </div>
  <div class="row">
    <div class="span5 offset1">
      <%= image_tag @work.cover.url(:preview) %>
    </div>
    <div class="span5 target">
      <a class="link" href="http://<%= @work.link %>">
        <%= if @work.category == 'Mobile' then 'Play Store Link' else @work.link end%>
      </a>
      <%= BlueCloth.new(@work.description).to_html().html_safe() %>
    </div>
  </div>
  <div class="row images">
    <div class="span10 offset1">
      <div class="row">
        <% @work.pictures.each_with_index do |picture , i| %>
        <%= link_to picture.image.url() , :rel => "gallery#{@work.id}" do  %>
        <%= image_tag picture.image.url(:thumb) , :class => 'span1' %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <script type="textt/javascript">
		$('.images a').fancybox({
			padding : 0
		});
		$('.target a').attr('target','_blank');
  </script>
</div>
